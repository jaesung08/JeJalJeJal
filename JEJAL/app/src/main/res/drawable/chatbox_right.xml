<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 말풍선의 배경 색상 -->
    <solid android:color="#EFEFEF"/> <!-- 배경색을 설정, 예시는 회색으로 설정 -->

    <!-- 모서리를 둥글게 -->
    <corners
        android:topLeftRadius="16dp"
        android:topRightRadius="16dp"
        android:bottomLeftRadius="16dp"
        android:bottomRightRadius="0dp"/> <!-- 왼쪽 아래 모서리를 제외하고 모두 둥글게 -->

    <!-- 말풍선의 테두리 -->
    <stroke
        android:width="1dp"
        android:color="#FFFFFF"/> <!-- 테두리 색상을 설정, 예시는 흰색으로 설정 -->

    <!-- 말풍선의 삼각형 꼬리를 추가하기 위한 padding 설정 -->
    <padding
        android:left="10dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/> <!-- 삼각형 꼬리 부분을 제외한 나머지에 패딩 설정 -->

    <!-- 선택적으로 꼬리를 표현하고자 할 경우에는 별도의 drawable을 만들거나 custom view를 사용하여 표현해야 함. -->
</shape>
